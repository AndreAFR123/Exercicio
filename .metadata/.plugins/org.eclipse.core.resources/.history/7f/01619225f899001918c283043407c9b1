package arraylernum;

public class Questao06 {

	public static void main(String[] args) {
		int i = 0 , numero = 0;
		numero = Teclado.lerInt("digite um numero igual ou menor a 50: ");
		while (numero > 50) {
			numero = Teclado.lerInt("numero maior que 50 digite um numero menor ou igual a 50: ");
		}
		while (numero < 250) {
			System.out.println("numero apos multipliecacao por 3, " + i + " veze(s)" + numero);
			i ++;
			numero *= 3;
		}
	}
}
