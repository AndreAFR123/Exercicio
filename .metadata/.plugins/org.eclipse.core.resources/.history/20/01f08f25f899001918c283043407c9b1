package arraylernum;

public class Questao10 {

	public static void main(String[] args) {
		int num = 3;
		for (int i = 0; i <= 15; i++) {
			if (i == 0) {
				System.out.println(num + " elevado a " + i + " e igual a 1");
			}
			else if (i == 1) {
				System.out.println(num + " elevado a " + i + " e igual a " + num);
			}
			else {
				num *= 3;
				System.out.println("3 elevado a " + i + " e igual a " + num);
			}
		}
	}
}
